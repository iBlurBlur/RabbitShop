@page
@model Web.Pages.Product.CreateModel
@{
}
@{
    ViewData["Title"] = "Create Product";
}

<form method="post" enctype="multipart/form-data">
    <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
        <h1 class="h2">@ViewData["Title"]</h1>
        <div class="btn-toolbar">
            <button type="submit" class="btn btn-primary">
                Add product
            </button>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="CreateProductViewModel.Name" class="form-label"></label>
            <input asp-for="CreateProductViewModel.Name" class="form-control">
            <span asp-validation-for="CreateProductViewModel.Name" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="CreateProductViewModel.ProductNumber" class="form-label"></label>
            <input asp-for="CreateProductViewModel.ProductNumber" class="form-control">
            <span asp-validation-for="CreateProductViewModel.ProductNumber" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="CreateProductViewModel.CategoryId" class="form-label"></label>
            <select asp-for="CreateProductViewModel.CategoryId" asp-items="Model.SelectListProductCategories" class="form-select"> </select>
            <span asp-validation-for="CreateProductViewModel.CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="CreateProductViewModel.Price" class="form-label"></label>
            <input asp-for="CreateProductViewModel.Price" class="form-control">
            <span asp-validation-for="CreateProductViewModel.Price" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="CreateProductViewModel.Color" class="form-label"></label>
            <input asp-for="CreateProductViewModel.Color" type="color" class="form-control form-control-color w-100">
            <span asp-validation-for="CreateProductViewModel.Color" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="CreateProductViewModel.Size" class="form-label"></label>
            <select asp-for="CreateProductViewModel.Size" class="form-select">
                <option value="">Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
            <span asp-validation-for="CreateProductViewModel.Size" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="CreateProductViewModel.Weight" class="form-label"></label>
            <input asp-for="CreateProductViewModel.Weight" class="form-control">
            <span asp-validation-for="CreateProductViewModel.Weight" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="CreateProductViewModel.UploadFile" class="form-label"></label>
            <input id="upload_file" asp-for="CreateProductViewModel.UploadFile" class="form-control" accept="image/*">
            <span id="upload_file_validation" asp-validation-for="CreateProductViewModel.UploadFile" class="text-danger"></span>
        </div>

        <div class="col-12">
            <img id="preview_image" class="w-100 border d-none">
            <video id="video_player" controls class="w-100 d-none">
                <source id="preview_video">
            </video>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $("#upload_file").change(function () {
            previewFile(this);
            $("#upload_file_validation").removeClass("field-validation-error").html("")
        });
    </script>
}
